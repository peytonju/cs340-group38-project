{{!-- farms.handlebars (full CRUD) --}}
<h1>Farms</h1>

<table>
  <thead>
    <tr><th>ID</th><th>Owner</th><th>Name</th><th>Type</th><th>Save</th><th>Delete</th></tr>
  </thead>
  <tbody>
    {{#each Farms}}
      <tr>
        <form method="post" action="/farms/update/{{farmID}}">
          <td>{{farmID}}</td>
          <td>
            <select name="playerID">
              {{#each ../players}}
                <option value="{{playerID}}" {{#if (eq playerID ../owner.playerID)}}selected{{/if}}>
                  {{playerName}}
                </option>
              {{/each}}
            </select>
          </td>
          <td><input name="farmName" value="{{farmName}}" required /></td>
          <td>
            <select name="farmType">
              {{#each ../availableTypes}}
                <option {{#if (eq this ../farmType)}}selected{{/if}}>{{this}}</option>
              {{/each}}
            </select>
          </td>
          <td><button type="submit">Save</button></td>
        </form>
        <td>
          <form method="post" action="/farms/delete/{{farmID}}" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    {{else}}
      <tr><td colspan="6">No farms.</td></tr>
    {{/each}}
  </tbody>
</table>

<h2>Add Farm</h2>
<form method="post" action="/farms">
  <input name="farmName" placeholder="Farm name" required />
  <select name="playerID" required>
    <option disabled selected>Ownerâ€¦</option>
    {{#each players}}<option value="{{playerID}}">{{playerName}}</option>{{/each}}
  </select>
  <select name="farmType" required>
    {{#each availableTypes}}<option>{{this}}</option>{{/each}}
  </select>
  <button type="submit">Add</button>
</form>
