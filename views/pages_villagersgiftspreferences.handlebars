{{!-- villagersgiftspreferences.handlebars (list / add) --}}
<h1>Villager Gift Preferences</h1>

<table>
  <thead>
    <tr><th>Villager</th><th>Gift</th><th>Preference</th><th>Delete</th></tr>
  </thead>
  <tbody>
    {{#each VillagersGiftsPreferences}}
      <tr>

        <td>
          <select name="villagerID">
              {{#each ../Villagers}}
                <option value="{{villagerID}}" {{#if (eq villagerID ../villagerID)}}selected{{/if}}>
                  {{villagerName}}
                </option>
              {{/each}}
            </select>
        </td>

        <td>
          <select name="giftID">
              {{#each ../Gifts}}
                <option value="{{giftID}}" {{#if (eq giftID ../giftID)}}selected{{/if}}>
                  {{giftName}}
                </option>
              {{/each}}
            </select>
        </td>
        <td>{{preference}}</td>

        <td>
          <form method="post" action="/tables/villagersgiftspreferences/delete/{{villagerID}},{{giftID}}" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    {{else}}
      <tr><td colspan="3">No gift preferences recorded.</td></tr>
    {{/each}}
  </tbody>
</table>

<h2>Add Gift Preference</h2>
<form method="post" action="/tables/villagersgiftspreferences/insert">
  <select name="villagerID" required>
    <option disabled selected>Select Villager…</option>
    {{#each Villagers}}
      <option value="{{villagerID}}">{{villagerName}}</option>
    {{/each}}
  </select>
  
  <select name="giftID" required>
    <option disabled selected>Select Gift…</option>
    {{#each Gifts}}
      <option value="{{giftID}}">{{giftName}}</option>
    {{/each}}
  </select>
  
  <select name="preference" required>
    <option disabled selected>Preference Level…</option>
    <option value="love">Love</option>
    <option value="like">Like</option>
    <option value="neutral">Neutral</option>
    <option value="dislike">Dislike</option>
    <option value="hate">Hate</option>
  </select>
  
  <button type="submit">Add Preference</button>
</form>