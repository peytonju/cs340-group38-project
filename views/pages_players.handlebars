{{!-- players.handlebars (add / list / delete) --}}
<h1>Players</h1>

<table>
  <thead><tr><th>ID</th><th>Name</th><th>Delete</th></tr></thead>
  <tbody>
    {{#each Players}}
      <tr>
        <td>{{playerID}}</td>
        <td>{{playerName}}</td>
        <td>
          <form method="post" action="/players/delete/{{playerID}}" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    {{else}}
      <tr><td colspan="3">No players.</td></tr>
    {{/each}}
  </tbody>
</table>

<h2>Add Player</h2>
<form method="post" action="/players">
  <input name="playerName" placeholder="Name" required />
  <button type="submit">Add</button>
</form>
