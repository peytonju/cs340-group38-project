{{!-- players.handlebars (add / list / delete) --}}
<h1>Players</h1>

<table>
  <thead><tr><th>ID</th><th>Name</th></tr></thead>
  <tbody>
    {{#each Players}}
      <tr>
        <form method="post" action="/tables/players/update/{{playerID}}">
          <td>{{playerID}}</td>

          <td><input name="playerName" value="{{playerName}}" required /></td>

          <td><button type="submit">Save</button></td>
        </form>
        <td>
          <form method="post" action="/tables/players/delete/{{playerID}}" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    {{else}}
      <tr><td colspan="3">No players.</td></tr>
    {{/each}}
  </tbody>
</table>

<h2>Add Player</h2>
<form method="post" action="/tables/players/insert">
  <input name="playerName" placeholder="Name" required />

  <button type="submit">Add</button>
</form>
